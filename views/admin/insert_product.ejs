<div class="content1">

    <form style="margin-top: 22px;" class="form-signin" action="/insert-product" method="POST"
        enctype="multipart/form-data">
        <h2>Thêm sản phẩm</h2>
        <br>
        <br>
        <% if (message.length> 0) { %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
            <% } %>
                <br>
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Tên sản phẩm" required>
                </div>

                <div class="form-group">
                    <input type="text" name="price" class="form-control" placeholder="Giá sản phẩm" required>

                </div>

                <div class="form-group">

                    <input type="text" name="note" class="form-control" placeholder="Giới thiệu" required>

                </div>

                <br>
                <div class="form-group">
                    <div class="controls">
                        <select class="form-control" id="cateID" name="cateID">

                            <% data.forEach(function(cate){ %>
                                <option name="cateID" value="<%= cate._id%>">
                                    <%= cate.namecate%>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <input type="file" name="image" required>
                </div>
                <br>
                <button class="btn btn-lg btn-warning btn-block text-uppercase" type="submit"
                    style="width:15%;margin-left: 15%;">Thêm</button>
    </form>
</div>