<div class="content1">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">Danh sách loại sản phẩm</h3>
            <% if (message.length> 0) { %>
                <div style="margin-top: 10px;" class="alert alert-danger">
                    <%= message %>
                </div>
                <% } %>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Loại</th>
                            <th>Tùy chọn</th>

                        </tr>
                    </thead>

                    <tbody>
                        <% var i=0 %>
                            <% data.forEach(cate => { i++ %>
                                <tr class="td">
                                    <td>
                                        <%-i %>
                                    </td>
                                    <td>
                                        <%-cate.namecate %>
                                    </td>
                                    <td>
                                        <a href="edit-cate/<%= cate._id %>">Sửa </a> |
                                        <form action="/delete_cate/<%= cate._id %>?_method=DELETE" method="POST">
                                            <input type="submit" value="Delete" class="btn-delete btn">
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>