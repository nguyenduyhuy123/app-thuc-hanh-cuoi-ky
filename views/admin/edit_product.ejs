<div class="content1">

    <form class="form-signin" action="/admin/edit-product/<%= data._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <h2 style="margin-top: 20px;">Cập nhật sản phẩm</h2>
        <br>
        <% if (message.length> 0) { %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
            <% } %>
        <br>
        <div class="form-group">
            <input type="hidden" value="<%- data._id %>" name="id" class="form-control" placeholder="id" required>
        </div>
        <div class="form-group">
            <img src="/upload/<%- data.image %>" style="width: 50%; height: 20%;">
            <input type="file" name="image">
        </div>

        <div class="form-group">
            <input type="text" value="<%- data.name %>" name="name" class="form-control" placeholder="Tên sản phẩm">
        </div>
       
        <div class="form-group">
            <input type="text" value="<%- data.note %>" name="note" class="form-control" placeholder="Mô tả">
        </div>

        <br>

        <div class="form-group">
            <div class="controls">
                <select class="form-control" id="cateID" name="cateID">

                    <% item.forEach(function(cate){ %>

                        <option name="cateID" value="<%= cate._id%>">
                            <%= cate.namecate%>
                        </option>

                        <% }) %>
                </select>
            </div>
        </div>
        <div class="form-group">
            <input type="text" name="price" value="<%- data.price %>" class="form-control" placeholder="Giá sản phẩm">
        </div>

        <button class="btn form-group btn-lg btn-warning btn-block text-uppercase" type="submit"
            style="width: 15%; margin-left: 15%;">Cập nhật</button>
    </form>

</div>