<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form class="box" action="/signin" method="POST">
                <h2 style="color: white;">Đăng nhập</h2>
                <p class="text-muted">
                    <% if (message.length> 0) { %>
                        <div class="alert alert-danger">
                            <%= message %>
                        </div>
                        <% } %>
                </p>
                <input type="text" name="email" placeholder="Email">
                <input type="password" name="password" placeholder="Mật Khẩu">
                <input type="submit" value="Đăng nhập">
                <a class="" href="/register">Bạn chưa có tài khoản ?</a>
            </form>
        </div>
    </div>
</div>